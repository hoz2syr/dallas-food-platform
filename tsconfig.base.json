{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./services/order/src",
    "paths": {
      "@domain/*": ["modules/order/domain/*"],
      "@application/*": ["modules/order/application/*"],
      "@infrastructure/*": ["modules/order/infrastructure/*"]
    }
  }
}
