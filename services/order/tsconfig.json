{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "../../",
    "ignoreDeprecations": "6.0"
  },

  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "**/*.spec.ts"
  ]
}
